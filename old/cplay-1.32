PLAYERS = [mpg123_Player(), sox_Player()]

def VALID_SONG(name):
    for player in PLAYERS:
        if player.format.match(name):
            return 1

def VALID_PLAYLIST(name):
    if re.compile(".*\.m3u$", re.I).match(name):
        return 1

