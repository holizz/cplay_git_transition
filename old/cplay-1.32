class Player:
    def __init__(self):
        self.stopped = 1
        self.paused = 0
        self.pstdout = os.pipe()
        self.pstderr = os.pipe()
        self.pathname = None
        self.filename = None
        self.seek_step = 1
        self.seek_time = None
        self.frames_done = None
        self.frames_left = None
        self.pid = None
        self.start_time = None
        self.start_pathname = None
        self.start_frame = None

    def is_playing(self):
        return not self.stopped

    def is_paused(self):
        return self.paused

    def is_seeking(self):
        return self.seek_time is not None

    def is_starting(self):
        return self.start_time is not None

    def play(self, pathname, frame = None):
        if pathname is None: return
        if self.is_playing(): self.stop()
        try:
            while 1: os.waitpid(self.pid, os.WNOHANG)
        except: pass
        if frame is None: frame = self.frames_done
        self.pathname = pathname
        self.filename = os.path.basename(self.pathname)
        self.stopped = 0
        self.paused = 0
        signal.signal(signal.SIGCHLD, signal.SIG_IGN)
        self.pid = os.fork()
        if self.pid == 0:
            os.setpgrp()
            os.dup2(self.pstdout[1], sys.stdout.fileno())
            os.dup2(self.pstderr[1], sys.stderr.fileno())
            for player in PLAYERS:
                if player.format.match(pathname):
                    player.play(pathname, frame)
        self.seek_step = 1
        self.seek_time = None
        self.start_time = None
        app.set_default_status("Playing: %s" % self.filename)

    def pause(self):
        self.paused = 1
        app.set_default_status("Paused: %s" % self.filename)
        try: os.kill(self.pid, signal.SIGSTOP)
        except os.error: pass

    def unpause(self):
        self.paused = 0
        app.set_default_status("Playing: %s" % self.filename)
        try: os.kill(self.pid, signal.SIGCONT)
        except os.error: pass

    def stop(self):
        self.stopped = 1
        if self.is_paused():
            self.unpause()
        app.set_default_status("Stopped: %s" % self.filename)
        try: os.kill(self.pid, signal.SIGINT)
        except os.error: pass

    def start(self, pathname, frame):
        if pathname:
            self.start_time = time.time()
            self.start_pathname = pathname
            self.start_frame = frame

    def seek(self, direction):
        if self.frames_done is None: return
        self.seek_time = time.time()
        self.seek_step = self.seek_step * (self.seek_step * direction > 0) + \
                         direction
        frames_total = self.frames_done + self.frames_left
        self.frames_done = min(frames_total,
                               max(0, self.frames_done + self.seek_step))
        self.frames_left = frames_total - self.frames_done
        self.show_position()

    def set_time(self, frames_done, frames_left):
        if self.is_seeking(): return
        self.frames_done = frames_done
        self.frames_left = frames_left
        self.show_position()

    def show_position(self):
        # eee - ugly
        time_done = self.frames_done / FPS
        time_left = self.frames_left / FPS
        app.counter(time_left)
        if time_done:
            app.progress(time_done / (time_done + time_left))
        else:
            app.progress(0)

    def poll(self):
        try: os.waitpid(self.pid, os.WNOHANG)
        except os.error:
            app.set_default_status("")
            app.counter(0)
            app.progress(0)
            return 1

