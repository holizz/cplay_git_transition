class Application:
    def __init__(self):
        self.player = None
        self.keymapstack = KeymapStack()

    def setup(self):
        if termios:
            self.tcattr = termios.tcgetattr(sys.stdin.fileno())
            tcattr = termios.tcgetattr(sys.stdin.fileno())
            tcattr[0] = tcattr[0] & ~(TERMIOS.IXON)
            termios.tcsetattr(sys.stdin.fileno(), TERMIOS.TCSANOW, tcattr)
        self.w = curses.initscr()
        curses.cbreak()
        curses.noecho()
        try: curses.meta(1)
        except AttributeError: pass
        try: curses.curs_set(0)
        except AttributeError: pass
        signal.signal(signal.SIGHUP, self.signal_quit)
        signal.signal(signal.SIGINT, self.signal_quit)
        signal.signal(signal.SIGTERM, self.signal_quit)
        signal.signal(signal.SIGWINCH, self.signal_resize)
        self.win_root = RootWindow(None)
        self.win_root.update()
        self.win_tab = self.win_root.win_tab
        self.win_filelist = self.win_root.win_tab.win_filelist
        self.win_playlist = self.win_root.win_tab.win_playlist
        self.status = self.win_root.win_status.status
        self.set_default_status = self.win_root.win_status.set_default_status
        self.restore_default_status = self.win_root.win_status.restore_default_status
        self.counter = self.win_root.win_counter.counter
        self.progress = self.win_root.win_progress.progress
        self.player = Player()
        self.timeout_tag = 0
        self.timeout_dict = {}
        self.win_filelist.listdir_maybe(time.time())
        self.set_default_status("")
        self.status(__version__, 2)

    def cleanup(self):
        curses.endwin()
        termios and termios.tcsetattr(sys.stdin.fileno(), TERMIOS.TCSADRAIN, self.tcattr)

    def add_timeout(self, func, timeout):
        tag = self.timeout_tag = self.timeout_tag + 1
        self.timeout_dict[tag] = (func, time.time() + timeout)
        return tag

    def remove_timeout(self, tag):
        del self.timeout_dict[tag]

    def check_timeout(self, now):
        for tag, (func, timeout) in self.timeout_dict.items():
            if now >= timeout:
                self.remove_timeout(tag)
                func()
        return len(self.timeout_dict) and 0.2 or None

    def run(self):
        r = w = e = []
        while 1:
            now = time.time()
            timeout = self.check_timeout(now)
            self.win_filelist.listdir_maybe(now)
            if self.player.is_starting():
                timeout = 0.5
                if now - self.player.start_time > 0.5:
                    self.player.play(self.player.start_pathname, self.player.start_frame)
            if self.player.is_playing():
                timeout = 0.5
                if (self.player.is_seeking() and
                    now - self.player.seek_time > 0.5):
                    self.player.play(self.player.pathname)
                if self.player.poll():
                    pathname = self.win_playlist.next_song()
                    if pathname: self.player.play(pathname, 0)
                    else: self.player.stopped = 1 # end of playlist hack
            r = [sys.stdin, self.player.pstdout[0], self.player.pstderr[0]]
            try: r, w, e = select.select(r, w, e, timeout)
            except select.error: continue

            # -- user input
            if sys.stdin in r:
                c = self.win_root.getch()
                self.keymapstack.process(c)

            # -- player input
            if self.player.pstderr[0] in r:
                m = mpg123_Player.progress.search(os.read(self.player.pstderr[0], 256))
                if m: self.player.set_time(string.atoi(m.group(1)),
                                           string.atoi(m.group(2)))

            # -- consume anything written on stdout
            if self.player.pstdout[0] in r:
                os.read(self.player.pstdout[0], 256)

    def next_song(self):
        self.player.start(self.win_playlist.next_song(), 0)

    def prev_song(self):
        self.player.start(self.win_playlist.prev_song(), 0)

    def pause(self):
        if self.player.is_playing():
            if self.player.is_paused(): self.player.unpause()
            else: self.player.pause()

    def stop(self):
        if self.player.is_playing(): self.player.stop()
        else: self.player.play(self.player.pathname)

    def seek(self, direction):
        self.player.seek(direction)

    ## eee - this does not work with all mixers
    def set_volume(self, ch):
        try:
            vol = (ch & 0xf) * 10
            mixer_fd = os.open("/dev/mixer", 1)
            fcntl.ioctl(mixer_fd, 0xc0044d00, "%c%c" % (vol, vol))
            os.close(mixer_fd)
            app.status("Volume %d%%" % vol, 1)
        except os.error:
            app.status("Cannot open /dev/mixer", 1)

    def quit(self):
        if self.player and self.player.is_playing():
            self.player.stop()
        sys.exit(0)

    def signal_resize(self, sig, frame):
        ## duh
        curses.endwin()
        self.w.refresh()
        self.win_root.resize()
        self.win_root.update()

    def signal_quit(self, sig, frame):
        self.quit()

